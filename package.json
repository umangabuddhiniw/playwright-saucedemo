{
  "name": "saucedemo-automation",
  "version": "1.0.0",
  "description": "SauceDemo E-commerce automation with Playwright and TypeScript",
  "scripts": {
    "test": "npx playwright test",
    "test:ci": "NODE_OPTIONS=\"--require ts-node/register\" npx playwright test --workers=1",
    "test:headed": "npx playwright test --headed",
    "test:debug": "npx playwright test --debug",
    "test:ui": "npx playwright test --ui",
    
    "test:chromium": "npx playwright test --project=chromium",
    "test:firefox": "npx playwright test --project=firefox", 
    "test:webkit": "npx playwright test --project=webkit",
    
    "test:video-users": "npx playwright test src/tests/standard-user-video.spec.ts src/tests/problem-user-video.spec.ts src/tests/locked-user-video.spec.ts src/tests/error-user-video.spec.ts --project=chromium",
    "test:purchase-flows": "npx playwright test src/tests/purchaseFlow.spec.ts --project=chromium",
    
    "test:report": "npx playwright show-report",
    "test:full": "npm run test && npm run test:report",
    
    "test:parallel": "npx playwright test --workers=4",
    "test:retry": "npx playwright test --retries=2",
    "test:trace": "npx playwright test --trace=on",
    "test:slow": "npx playwright test --timeout=120000",
    
    "report": "npx playwright show-report",
    "report:open": "npx playwright show-report",
    
    "clean": "npx rimraf test-results playwright-report dist",
    "clean:all": "npx rimraf test-results playwright-report node_modules package-lock.json dist",
    "clean:install": "npm run clean:all && npm install",
    
    "install:browsers": "npx playwright install --with-deps",
    "install:ci": "npx playwright install chromium",
    
    "typecheck": "npx tsc --noEmit",
    "build": "tsc",
    
    "structure": "find . -type f -name '*.webm' -o -name '*.html' -o -name '*.json' -o -name '*.log' -o -name '*.png' | head -20 || echo 'No test results found'",
    "verify": "npm run typecheck && npm run test:chromium -- --reporter=line",
    
    "playwright:config": "npx ts-node -e \"import('./playwright.config.ts').then(c => console.log('âœ… Config loaded'))\""
  },
  "devDependencies": {
    "@playwright/test": "^1.49.0",
    "@types/node": "^20.0.0",
    "@types/winston": "^2.4.4",
    "typescript": "^5.3.0",
    "winston": "^3.18.3",
    "rimraf": "^5.0.5",
    "ts-node": "^10.9.0"
  },
  "dependencies": {},
  "keywords": [
    "playwright",
    "automation", 
    "testing",
    "saucedemo",
    "typescript",
    "e2e",
    "browser-testing"
  ],
  "author": "Your Name",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  }
}