{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": ".",
    "resolveJsonModule": true,
    "types": ["node", "@playwright/test"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@utils/*": ["./src/utils/*"],
      "@tests/*": ["./src/tests/*"],
      "@pages/*": ["./src/pages/*"],
      "@data/*": ["./data/*"]
    }
    // ‚ùå REMOVED: "noEmit": true
  },
  "include": [
    "src/**/*", 
    "playwright.config.ts",
    "data/**/*"
  ],
  "exclude": [
    "node_modules", 
    "dist", 
    "test-results", 
    "playwright-report",
    "blob-report",
    "screenshots",
    "videos"
  ]
}