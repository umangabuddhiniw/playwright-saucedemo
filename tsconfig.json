{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": ".",
    "resolveJsonModule": true,
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@utils/*": ["./src/utils/*"]
    },
    // âœ… ADD ONLY THIS ONE:
    "noEmit": true
  },
  "include": [
    "src/**/*", 
    "global-setup.ts", 
    "playwright.config.ts", 
    "data/**/*"
  ],
  "exclude": [
    "node_modules", 
    "dist", 
    "test-results", 
    "playwright-report"
  ]
}